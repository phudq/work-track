{
  "manifest_version": 3,
  "name": "CRXJS React Vite Example",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "src/content.ts"
      ],
      "matches": [
        "https://www.vocabulary.com/*",
        "https://www.youtube.com/*"
      ]
    }
  ],
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.vocabulary.com/*",
    "https://api.vocabulary.com/*"
  ]
}
